  <!-- <tbody> -->
    <% @posts.each do |post| %>
      <tr>

      </tr>
    <div class="col-md-6">
    <div class="well">

      <div class="panel-heading text-center h2"><%= post.title %></div>
      <!-- List group -->
      <ul class="list-group">
        <li class="list-group-item text-center h3">By: <%= post.author %></li>
        <li class="list-group-item text-center h5"><%= post.blog_entry.html_safe %></li>
        
        <li class="list-group-item "><%= link_to 'Show', post %></li>
        
        <li class="list-group-item"><%= link_to 'Edit', edit_post_path(post) %></li>
        <li class="list-group-item"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        <li class="list-group-item">Created on <%= post.created_at.strftime("%B %e, %Y at %l:%M") %></li>
      </ul>

    </div>
  </div>
    <% end %>
